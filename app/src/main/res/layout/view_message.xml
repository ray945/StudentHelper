<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp">

        <ImageView android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@android:color/holo_blue_dark"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jeremy "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#666"
                />
            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16小时前"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#dedede"
        android:text="Priority mode on AndroidLollipop is like a reception for your notifications.
You tell it what to let through,and what to keep ...."
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <Button
            android:id="@+id/message_like_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/heart_like"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="234 likes"/>
        <Button
            android:id="@+id/message_dislike_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/heart_dislike"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="234 dislikes"/>
    </LinearLayout>

</LinearLayout>