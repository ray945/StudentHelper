<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="remerl.me.studenthelper">

    <application
        android:name=".App"
        android:icon="@null"
        android:label="@string/app_name"
        android:theme="@style/MyTheme.Material">
        <activity android:name=".ui.LoginActivity"


            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.RegisterActivity" />


        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">

        </activity>
        <activity
            android:name=".ui.CommentActivity"
            android:label="" />
        <activity
            android:name=".ui.PostMessageActivity"
            android:label=""
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.PostCommentActivity"
            android:label=""
            android:windowSoftInputMode="adjustResize" />

        <provider
            android:name=".dao.TodoProvider"
            android:authorities="me.remerl.provider"
            android:exported="false">
            <grant-uri-permission android:pathPattern=".*" />
        </provider>

    </application>

</manifest>